include includes/header.pug
block content
  body
    // [ Pre-loader ] start
    .loader-bg
      .loader-track
        .loader-fill
    // [ Pre-loader ] 
    include includes/sidenav.pug
    include includes/navbar-nav.pug
    // [ Main Content ] start
    .pcoded-main-container
      .pcoded-wrapper
        .pcoded-content
          .pcoded-inner-content
            // [ breadcrumb ] start
            .page-header
              .page-block
                .row.align-items-center
                  .col-md-12
                    .page-header-title
                      h5.m-b-10 Morris Chart
                    ul.breadcrumb
                      li.breadcrumb-item
                        a(href='index.html')
                          i.feather.icon-home
                      li.breadcrumb-item
                        a(href='javascript:') Chart
                      li.breadcrumb-item
                        a(href='javascript:') Morris Chart
            // [ breadcrumb ] end
            .main-body
              .page-wrapper
                // [ Main Content ] start
                .row
                  // [ Morris Chart ] start
                  .col-xl-6
                    .card
                      .card-header
                        h5 Bar [ Simple ] Chart
                      .card-block
                        #morris-bar-chart(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Bar [ Stacked ] Chart
                      .card-block
                        #morris-bar-stacked-chart(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Line [ Angle ] Chart
                      .card-block
                        #morris-area-chart(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Area [ Smooth ] Chart
                      .card-block
                        #morris-area-curved-chart(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Line [ Angle ] Chart
                      .card-block
                        #morris-line-chart.ChartShadow(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Line [ Smooth ] Chart
                      .card-block
                        #morris-line-smooth-chart.ChartShadow(style='height:300px')
                  .col-xl-6
                    .card
                      .card-header
                        h5 Donut Chart
                      .card-block
                        #morris-donut-chart(style='height:300px')
                  // [ Morris Chart ] end
                  // [ Main Content ] end
                  // [ Main Content ] end
                  // Warning Section Starts
                  // Older IE warning message
                  //if lt IE 11
                    .ie-warning
                      h1 Warning!!
                      p
                        | You are using an outdated version of Internet Explorer, please upgrade
                        br
                        | to any of the following web browsers to access this website.
                      .iew-container
                        ul.iew-download
                          li
                            a(href='http://www.google.com/chrome/')
                              img(src='assets/images/browser/chrome.png' alt='Chrome')
                              div Chrome
                          li
                            a(href='https://www.mozilla.org/en-US/firefox/new/')
                              img(src='assets/images/browser/firefox.png' alt='Firefox')
                              div Firefox
                          li
                            a(href='http://www.opera.com')
                              img(src='assets/images/browser/opera.png' alt='Opera')
                              div Opera
                          li
                            a(href='https://www.apple.com/safari/')
                              img(src='assets/images/browser/safari.png' alt='Safari')
                              div Safari
                          li
                            a(href='http://windows.microsoft.com/en-us/internet-explorer/download-ie')
                              img(src='assets/images/browser/ie.png' alt='')
                              div IE (11 & above)
                      p Sorry for the inconvenience!
                  // Warning Section Ends
                  // Required Js
                  include includes/footer.pug
                  // chart-morris Js
                  script(src='assets/plugins/chart-morris/js/raphael.min.js')
                  script(src='assets/plugins/chart-morris/js/morris.min.js')
                  script(src='assets/js/pages/chart-morris-custom.js')
