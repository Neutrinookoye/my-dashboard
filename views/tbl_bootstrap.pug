include includes/header.pug
block content
  body
    // [ Pre-loader ] start
    .loader-bg
      .loader-track
        .loader-fill
    // [ Pre-loader ] End
    include includes/sidenav.pug
    include includes/navbar-nav.pug
    // [ Main Content ] start
    section.pcoded-main-container
      .pcoded-wrapper
        .pcoded-content
          .pcoded-inner-content
            // [ breadcrumb ] start
            .page-header
              .page-block
                .row.align-items-center
                  .col-md-12
                    .page-header-title
                      h5.m-b-10 Bootstrap Basic Tables
                    ul.breadcrumb
                      li.breadcrumb-item
                        a(href='index.html')
                          i.feather.icon-home
                      li.breadcrumb-item
                        a(href='#!') Tables
                      li.breadcrumb-item
                        a(href='javascript:') Basic Tables
            // [ breadcrumb ] end
            .main-body
              .page-wrapper
                // [ Main Content ] start
                .row
                  // [ basic-table ] start
                  .col-xl-12
                    .card
                      .card-header
                        h5 Basic Table
                        span.d-block.m-t-5
                          | use class 
                          code table
                          |  inside table element
                      .card-block.table-border-style
                        .table-responsive
                          table.table
                            thead
                              tr
                                th #
                                th First Name
                                th Last Name
                                th Username
                            tbody
                              tr
                                th(scope='row') 1
                                td Mark
                                td Otto
                                td @mdo
                              tr
                                th(scope='row') 2
                                td Jacob
                                td Thornton
                                td @fat
                              tr
                                th(scope='row') 3
                                td Larry
                                td the Bird
                                td @twitter
                  // [ basic-table ] end
                  // [ Hover-table ] start
                  .col-xl-12
                    .card
                      .card-header
                        h5 Hover Table
                        span.d-block.m-t-5
                          | use class 
                          code table-hover
                          |  inside table element
                      .card-block.table-border-style
                        .table-responsive
                          table.table.table-hover
                            thead
                              tr
                                th #
                                th First Name
                                th Last Name
                                th Username
                            tbody
                              tr
                                th(scope='row') 1
                                td Mark
                                td Otto
                                td @mdo
                              tr
                                th(scope='row') 2
                                td Jacob
                                td Thornton
                                td @fat
                              tr
                                th(scope='row') 3
                                td Larry
                                td the Bird
                                td @twitter
                  // [ Hover-table ] end
                  // [ stiped-table ] start
                  .col-xl-12
                    .card
                      .card-header
                        h5 Striped Table
                        span.d-block.m-t-5
                          | use class 
                          code table-striped
                          |  inside table element
                      .card-block.table-border-style
                        .table-responsive
                          table.table.table-striped
                            thead
                              tr
                                th #
                                th First Name
                                th Last Name
                                th Username
                            tbody
                              tr
                                th(scope='row') 1
                                td Mark
                                td Otto
                                td @mdo
                              tr
                                th(scope='row') 2
                                td Jacob
                                td Thornton
                                td @fat
                              tr
                                th(scope='row') 3
                                td Larry
                                td the Bird
