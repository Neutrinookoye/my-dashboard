include includes/header.pug
block content
  body
    // [ Pre-loader ] start
    .loader-bg
      .loader-track
        .loader-fill
    // [ Pre-loader ] End
    include includes/sidenav.pug
    include includes/navbar-nav.pug
    // [ Main Content ] start
    .pcoded-main-container
      .pcoded-wrapper
        .pcoded-content
          .pcoded-inner-content
            // [ breadcrumb ] start
            .page-header
              .page-block
                .row.align-items-center
                  .col-md-12
                    .page-header-title
                      h5.m-b-10 Badges
                    ul.breadcrumb
                      li.breadcrumb-item
                        a(href='index.html')
                          i.feather.icon-home
                      li.breadcrumb-item
                        a(href='javascript:') Basic Componants
                      li.breadcrumb-item
                        a(href='javascript:') Badges
            // [ breadcrumb ] end
            .main-body
              .page-wrapper
                // [ Main Content ] start
                .row
                  // [ badge ] start
                  .col-sm-12
                    .card
                      .card-header
                        h5 Basic Badges
                      .card-body
                        h1
                          | Example heading 
                          span.badge.badge-secondary New
                        h2
                          | Example heading 
                          span.badge.badge-secondary New
                        h3
                          | Example heading 
                          span.badge.badge-secondary New
                        h4
                          | Example heading 
                          span.badge.badge-secondary New
                        h5
                          | Example heading 
                          span.badge.badge-secondary New
                        h6
                          | Example heading 
                          span.badge.badge-secondary New
                    .card
                      .card-header
                        h5 Button Badges
                      .card-body
                        button.btn.btn-primary(type='button')
                          | primary 
                          span.badge.badge-light 4
                        button.btn.btn-secondary(type='button')
                          | secondary 
                          span.badge.badge-light 4
                        button.btn.btn-success(type='button')
                          | success 
                          span.badge.badge-light 4
                        button.btn.btn-danger(type='button')
                          | danger 
                          span.badge.badge-light 4
                        button.btn.btn-warning(type='button')
                          | warning 
                          span.badge.badge-light 4
                        button.btn.btn-info(type='button')
                          | info 
                          span.badge.badge-light 4
                  // [ badge ] end
                  // [ Main Content ] end
                  // [ Main Content ] end
                  // Warning Section Starts
                  // Older IE warning message
                  //if lt IE 11
                    .ie-warning
                      h1 Warning!!
                      p
                        | You are using an outdated version of Internet Explorer, please upgrade
                        br
                        | to any of the following web browsers to access this website.
                      .iew-container
                        ul.iew-download
                          li
                            a(href='http://www.google.com/chrome/')
                              img(src='assets/images/browser/chrome.png' alt='Chrome')
                              div Chrome
                          li
                            a(href='https://www.mozilla.org/en-US/firefox/new/')
                              img(src='assets/images/browser/firefox.png' alt='Firefox')
                              div Firefox
                          li
                            a(href='http://www.opera.com')
                              img(src='assets/images/browser/opera.png' alt='Opera')
                              div Opera
                          li
                            a(href='https://www.apple.com/safari/')
                              img(src='assets/images/browser/safari.png' alt='Safari')
                              div Safari
                          li
                            a(href='http://windows.microsoft.com/en-us/internet-explorer/download-ie')
                              img(src='assets/images/browser/ie.png' alt='')
                              div IE (11 & above)
                      p Sorry for the inconvenience!
                  // Warning Section Ends
                  // Required Js
                  include includes/footer.pug
